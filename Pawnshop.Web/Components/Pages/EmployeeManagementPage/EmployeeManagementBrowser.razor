@page "/Employee-management-page"
@using Pawnshop.Application.EmployeesApplication.Dto

<MudButtonGroup Color="Color.Primary" Variant="Variant.Filled">
    <MudButton StartIcon="@Icons.Material.Filled.RemoveRedEye">Details</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.Add">Add</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.ContentCopy">Add copy</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.Update">Update</MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.Delete">Delete</MudButton>
</MudButtonGroup>

<EmployeeManagementGrid OnEmployeeSelected="HandleEmployeeSelected" />


@code {
    private EmployeeDto currentEmployee = null;

    private void HandleEmployeeSelected(EmployeeDto selectedEmployee)
    {
        currentEmployee = selectedEmployee;
    }
}