@using Pawnshop.Domain.Roles

<MudNavMenu>
    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="/Home" 
                        Match="NavLinkMatch.All" 
                        Icon="@Icons.Material.Filled.Home">
                Home
            </MudNavLink>
        </Authorized>
    </AuthorizeView>

    <AuthorizeView Roles="@($"{UserRoles.HeadAdmin}, {UserRoles.ClientsDisplay}, {UserRoles.ClientsDisplayAndModify}")">
        <Authorized>
            <MudNavLink Href="/Clients-management-page"
                        Match="NavLinkMatch.All"
                        Icon="@Icons.Material.Filled.EmojiPeople">
                Client management
            </MudNavLink>
        </Authorized>
    </AuthorizeView>

    <AuthorizeView Roles="@($"{UserRoles.HeadAdmin}, {UserRoles.EmployeesDisplay}, {UserRoles.EmployeesDisplayAndModify}")">
        <Authorized>
            <MudNavLink Href="/Employee-management-page"
                        Match="NavLinkMatch.All"
                        Icon="@Icons.Material.Filled.Work">
                Employee management
            </MudNavLink>
        </Authorized>
    </AuthorizeView>
    
    <AuthorizeView Roles="@($"{UserRoles.HeadAdmin}, {UserRoles.UsersDisplay}, {UserRoles.UsersDisplayAndModify}")">
        <Authorized>
            <MudNavLink Href="/User-management-page"
                        Match="NavLinkMatch.All"
                        Icon="@Icons.Material.Filled.ManageAccounts">
                User management
            </MudNavLink>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>